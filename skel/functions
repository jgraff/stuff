
buildbot_shell()
{
    OLD_CWD=$PWD	
    OLD_PATH=$PATH
    OLD_LD_LIBRARY_PATH=$LD_LIBRARY_PATH

    PATH=$HOME/buildbot/toolchain/bin:$PATH
    LD_LIBRARY_PATH=$HOME/buildbot/toolchain/lib:$LD_LIBRARY_PATH
    export PATH LD_LIBRARY_PATH

    cd $HOME/buildbot
}

buildbot_exit_shell()
{
    PATH=$OLD_PATH
    LD_LIBRARY_PATH=$OLD_LD_LIBRARY_PATH
    export PATH LD_LIBRARY_PATH
    cd $OLD_CWD
}